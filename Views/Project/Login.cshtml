@using CSI402.ViewModels
@model ProjectUserViewModel

@{
    ViewData["Title"] = "Login Page";
    Layout = "_ProjectLayout";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card">
            <div class="card-body p-4">
                <h2 class="card-title text-center mb-4">เข้าสู่ระบบ</h2>

                <form method="post">
                    <div class="mb-3">
                        <label for="email" class="form-label">อีเมล หรือ ชื่อผู้ใช้</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="example@gmail.com" required asp-for="Email">
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">รหัสผ่าน</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="กรุณาใส่รหัสผ่าน" required asp-for="Password">
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="remember" name="remember">
                        <label class="form-check-label" for="remember">จำรหัสผ่านของฉัน</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-3">เข้าสู่ระบบ</button>

                    <div class="text-center mb-3">
                        <a href="#" class="text-decoration-none">ลืมรหัสผ่าน?</a>
                    </div>
                </form>

                <div class="border-top pt-3 text-center">
                    <p>ยังไม่มีบัญชี? <a asp-controller="Project" asp-action="Register" class="text-decoration-none">สมัครสมาชิก</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
