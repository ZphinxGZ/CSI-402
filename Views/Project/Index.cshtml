@using CSI402.Controllers

@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <link rel="stylesheet" href="~/css/project-forms.css" />
}

<div class="text-center mb-5">
    <h1 class="display-4">Welcome To Project Layout CSI402L</h1>
    <p class="text-muted">นายคุณากร ขำเจริญ 66075070</p>
</div>

<!-- Logged In Users Table -->
<div class="container">
    <div class="card bg-dark border-info">
        <div class="card-header bg-info text-dark">
            <h5 class="mb-0">
                <i class="fas fa-users"></i> ผู้ที่เข้าสู่ระบบและสมัครสมาชิก
            </h5>
        </div>
        <div class="card-body">
            @if (ProjectController.loggedInUsers != null && ProjectController.loggedInUsers.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-dark table-hover table-bordered">
                        <thead class="table-info">
                            <tr>
                                <th class="text-dark"><i class="fas fa-hashtag"></i> ลำดับ</th>
                                <th class="text-dark"><i class="fas fa-user"></i> ชื่อ-นามสกุล</th>
                                <th class="text-dark"><i class="fas fa-envelope"></i> อีเมล</th>
                                <th class="text-dark"><i class="fas fa-phone"></i> เบอร์โทรศัพท์</th>
                                <th class="text-dark"><i class="fas fa-shield-alt"></i> รหัสผ่าน</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int index = 1;
                                foreach (var user in ProjectController.loggedInUsers)
                                {
                                    <tr>
                                        <td>@index</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(user.Lastname))
                                            {
                                                <span class="badge bg-info text-dark">@user.Name @user.Lastname</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark">@user.Name</span>
                                            }
                                        </td>
                                        <td>@user.Email</td>
                                        <td>@(user.PhoneNumber > 0 ? user.PhoneNumber.ToString() : "-")</td>
                                        <td>
                                            <span class="text-muted">
                                                @if (!string.IsNullOrEmpty(user.Password))
                                                {
                                                    <span>••••••••</span>
                                                }
                                                else
                                                {
                                                    <span>-</span>
                                                }
                                            </span>
                                        </td>
                                    </tr>
                                    index++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="container mt-4">
    <div class="row g-3">
        <div class="col-md-6">
            <a asp-controller="Project" asp-action="Login" class="btn btn-info w-100 btn-lg">
                <i class="fas fa-sign-in-alt"></i> เข้าสู่ระบบ
            </a>
        </div>
        <div class="col-md-6">
            <a asp-controller="Project" asp-action="Register" class="btn btn-outline-info w-100 btn-lg">
                <i class="fas fa-user-plus"></i> สมัครสมาชิก
            </a>
        </div>
    </div>
</div>