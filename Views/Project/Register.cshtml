@using CSI402.ViewModels
@model ProjectUserViewModel

@{
    ViewData["Title"] = "Register Page";
}

@section Styles {
    <link rel="stylesheet" href="~/css/project-forms.css" />
}

<div class="form-container">
    <div class="form-card">
        <!-- Header -->
        <div class="form-header">
            <i class="fas fa-user-plus"></i>
            <h2>สมัครสมาชิก</h2>
        </div>

        <!-- Form -->
        <form method="post" class="form-content">
            <!-- First Name & Last Name Row -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="name" class="form-label">
                        <i class="fas fa-user"></i> ชื่อ
                    </label>
                    <input type="text" class="form-control form-control-lg" id="name" placeholder="ชื่อของคุณ" required asp-for="Name">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="lastname" class="form-label">
                        <i class="fas fa-user"></i> นามสกุล
                    </label>
                    <input type="text" class="form-control form-control-lg" id="lastname" placeholder="นามสกุลของคุณ" required asp-for="Lastname">
                </div>
            </div>

            <!-- Email Input -->
            <div class="mb-3">
                <label for="email" class="form-label">
                    <i class="fas fa-envelope"></i> อีเมล
                </label>
                <input type="email" class="form-control form-control-lg" id="email" placeholder="example@gmail.com" required asp-for="Email">
            </div>

            <!-- Phone Input -->
            <div class="mb-3">
                <label for="phonenumber" class="form-label">
                    <i class="fas fa-phone"></i> เบอร์โทรศัพท์
                </label>
                <input type="tel" class="form-control form-control-lg" id="phonenumber" placeholder="06x-xxxx-xxxx" required asp-for="PhoneNumber">
            </div>

            <!-- Password Input -->
            <div class="mb-3">
                <label for="password" class="form-label">
                    <i class="fas fa-lock"></i> รหัสผ่าน
                </label>
                <input type="password" class="form-control form-control-lg" id="password" placeholder="ใช้อย่างน้อย 8 ตัวอักษร" required minlength="8" asp-for="Password">
            </div>

            <!-- Confirm Password Input -->
            <div class="mb-3">
                <label for="confirmPassword" class="form-label">
                    <i class="fas fa-lock"></i> ยืนยันรหัสผ่าน
                </label>
                <input type="password" class="form-control form-control-lg" id="confirmPassword" placeholder="ยืนยันรหัสผ่านอีกครั้ง" required minlength="8">
            </div>

            <!-- Terms & Conditions -->
            @* <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="terms" name="terms" required>
                <label class="form-check-label" for="terms">
                    ฉันยอมรับ <a href="#" class="terms-link">เงื่อนไขการใช้บริการ</a> และ <a href="#" class="terms-link">นโยบายความเป็นส่วนตัว</a>
                </label>
            </div> *@

            <!-- Register Button -->
            <button type="submit" class="btn btn-info btn-lg w-100 fw-bold mb-3">
                <i class="fas fa-user-check"></i> สมัครสมาชิก
            </button>
        </form>

        <!-- Divider -->
        @* <div class="form-divider">หรือ</div>

        <!-- Social Login -->
        <div class="social-login">
            <button class="btn btn-outline-light btn-sm" title="Facebook">
                <i class="fab fa-facebook"></i>
            </button>
            <button class="btn btn-outline-light btn-sm" title="Google">
                <i class="fab fa-google"></i>
            </button>
            <button class="btn btn-outline-light btn-sm" title="Line">
                <i class="fab fa-line"></i>
            </button>
        </div> *@

        <!-- Login Link -->
        <div class="form-footer">
            <p>มีบัญชีอยู่แล้ว? <a asp-controller="Project" asp-action="Login" class="register-link">เข้าสู่ระบบ</a></p>
        </div>
    </div>
</div>
